{
  "include": ["src", "postcss.config.js"],
  "exclude": ["**/dist/*", "**/esm/*"],
  "compilerOptions": {
    "lib": ["DOM"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "outDir": "./dist",

    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  }
}
